@model IEnumerable<SimpleCrm.Customer>

<html>
<head>
    <title>Simple CRM</title>
</head>
<body>
    <h1>Customers</h1>
    <p>Welcome to the customers page.</p>
    <table>
        @foreach (var customer in Model)
        {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.PhoneNumber</td>
                </tr>
        }
    </table>
</body>
</html>