@model HomePageViewModel
@{
    ViewBag.Title = "Customers";
}

<div class="content">
    <h1>Customers</h1>
    <a class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored fab-right" asp-action="Create">
        <i class="material-icons">add</i>
    </a>
    <div class="mdl-list">
        @foreach (var customer in Model.Customers)
        {
            <div class="mdl-list__item--two-line">
                <partial name="_Summary" model="customer" />
            </div>
        }
    </div>
</div>