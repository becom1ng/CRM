<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="/css/vendor.min.css">
    <script src="/js/vendor.min.js"></script>
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">Simple CRM</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation. We hide it in small screens. -->
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a class="mdl-navigation__link" href="/">Customers</a>
                    @await Component.InvokeAsync("LoginLogout")
                </nav>
            </div>
        </header>
        <!-- TODO: main content area -->
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Simple CRM</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="/">Customers</a>
                @await Component.InvokeAsync("LoginLogout")
                <a class="mdl-navigation__link" asp-action="Register" asp-controller="Account">Register</a>
            </nav>
        </div>
        <div>
            @RenderBody()
        </div>
        <!-- TODO: footer area -->
        <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer__left-section">
                @await Component.InvokeAsync("Greeting")
            </div>
            <div class="mdl-mini-footer__right-section">
                <ul class="mdl-mini-footer__link-list">
                    <li><a href="#">&copy; @DateTime.Now.Year</a></li>
                    <li><a href="#">Ryan Lavery</a></li>
                    @RenderSection("footer", required: false)
                </ul>
            </div>
        </footer>
    </div>
    <script src="/js/vendor-post.min.js"></script>
</body>
</html>