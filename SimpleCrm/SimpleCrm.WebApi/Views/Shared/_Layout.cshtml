<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - SimpleCrm.WebApi</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <environment include="Development">
        <link rel="stylesheet" href="/css/vendor.min.css">
        <script src="/js/vendor.min.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.cyan-amber.min.css"
              asp-fallback-href="/css/vendor.min.css"
              asp-fallback-test-class="mdl-layout__header-row"
              asp-fallback-test-property="display"
              asp-fallback-test-value="flex">
        <script defer src="https://code.getmdl.io/1.3.0/material.min.js"
            asp-fallback-src="/js/vendor.min.js"
            asp-fallback-test="window.MaterialButton"></script>
    </environment>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <a href="/" style="color: rgb(66,66,66); font-weight: 400; text-decoration: none;">
                    <span class="mdl-layout-title">Simple CRM</span></a>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation. We hide it in small screens. -->
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a class="mdl-navigation__link" href="/about">Product</a>
                    <a class="mdl-navigation__link" href="/about#pricing">Pricing</a>
                    <a class="mdl-navigation__link" href="/customers">Customers</a>
                    @* @await Component.InvokeAsync("LoginLogout") *@
                </nav>
            </div>
        </header>
        <!-- Main content area -->
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Simple CRM</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="/about">Product</a>
                <a class="mdl-navigation__link" href="/about#pricing">Pricing</a>
                <a class="mdl-navigation__link" href="/customers">Customers</a>
                @* @await Component.InvokeAsync("LoginLogout") *@
                @* <a class="mdl-navigation__link" asp-action="Register" asp-controller="Account">Register</a> *@
            </nav>
        </div>
        <div>
            @RenderBody()
        </div>
        <!-- Footer area -->
        <footer class="mdl-mega-footer">
            <div class="mdl-mega-footer__middle-section">

                <div class="mdl-mega-footer__drop-down-section">
                    <input class="mdl-mega-footer__heading-checkbox" type="checkbox" checked>
                    <h1 class="mdl-mega-footer__heading">Product</h1>
                    <ul class="mdl-mega-footer__link-list">
                        <li><a href="/about">Overview</a></li>
                        <li><a href="/about#pricing">Pricing</a></li>
                        <li><a href="#">More ...</a></li>
                    </ul>
                </div>

                <div class="mdl-mega-footer__drop-down-section">
                    <input class="mdl-mega-footer__heading-checkbox" type="checkbox" checked>
                    <h1 class="mdl-mega-footer__heading">Customers</h1>
                    <ul class="mdl-mega-footer__link-list">
                        <li><a href="/customers">Personal</a></li>
                        <li><a href="/customers">Corporate</a></li>
                        <li><a href="/customers">Your Customers</a></li>
                    </ul>
                </div>

                <div class="mdl-mega-footer__drop-down-section">
                    <input class="mdl-mega-footer__heading-checkbox" type="checkbox" checked>
                    <h1 class="mdl-mega-footer__heading">Connect</h1>
                    <ul class="mdl-mega-footer__link-list">
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="mailto:email@example.com">E-Mail</a></li>
                    </ul>
                </div>
            </div>

            <div class="mdl-mega-footer__bottom-section">
                <div class="mdl-logo">Simple CRM</div>
                <ul class="mdl-mega-footer__link-list">
                    <li><a href="/">&copy; @DateTime.Now.Year</a></li>
                    <li><a href="/">Ryan Lavery</a></li>
                </ul>
            </div>

        </footer>
    </div>
    <script src="/js/vendor-post.min.js"></script>
</body>
</html>